{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "dist"  <-- Changed from "build" to "dist" for Vite
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",  <-- Common for Vite to bundle assets into a subfolder
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}